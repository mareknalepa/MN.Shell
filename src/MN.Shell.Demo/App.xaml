<Application x:Class="MN.Shell.Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mnshell="https://github.com/mareknalepa/MN.Shell">
    <Application.Resources>
        <mnshell:ApplicationLoader>
            <mnshell:ApplicationLoader.Bootstrapper>
                <mnshell:Bootstrapper/>
            </mnshell:ApplicationLoader.Bootstrapper>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MN.Shell;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </mnshell:ApplicationLoader>
    </Application.Resources>
</Application>
