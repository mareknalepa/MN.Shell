<UserControl x:Class="MN.Shell.Modules.FolderExplorer.FolderExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tree="clr-namespace:MN.Shell.Framework.Tree"
             xmlns:local="clr-namespace:MN.Shell.Modules.FolderExplorer"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="360"
             d:DataContext="{d:DesignInstance local:FolderExplorerViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Command="{Binding ReloadCommand}"
                        Style="{StaticResource ToolBarIconButtonBaseStyle}"
                        Content="&#xE72C;"
                        ToolTip="Refresh"/>
                <Button Command="{Binding CollapseAllCommand}"
                        Style="{StaticResource ToolBarIconButtonBaseStyle}"
                        Content="&#xF165;"
                        ToolTip="Collapse all"/>

                <Separator/>

                <ToggleButton IsChecked="{Binding ShowHidden}"
                              Style="{StaticResource ToolBarIconToggleButtonStyle}"
                              Content="&#xF19D;"
                              ToolTip="Show hidden elements"/>
                <ToggleButton IsChecked="{Binding ShowSystem}"
                              Style="{StaticResource ToolBarIconToggleButtonStyle}"
                              Content="&#xE770;"
                              ToolTip="Show system elements"/>
            </ToolBar>
        </ToolBarTray>

        <TreeView Grid.Row="1" ItemsSource="{Binding Folders}">
            <i:Interaction.Behaviors>
                <tree:TreeNodeBindingBehavior/>
                <local:DirectoryViewModelBindingBehavior/>
                <tree:TreeViewBindableSelectedItemBehavior SelectedItem="{Binding SelectedFolder}"/>
            </i:Interaction.Behaviors>
        </TreeView>
    </Grid>
</UserControl>
