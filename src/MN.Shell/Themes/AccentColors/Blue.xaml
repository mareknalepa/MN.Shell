<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    options:Freeze="True">

    <Color x:Key="AccentBaseColor" options:Freeze="True">#FF007ACC</Color>
    <SolidColorBrush x:Key="AccentBaseBrush" Color="#FF007ACC" options:Freeze="True"/>

    <Color x:Key="AccentActiveColor" options:Freeze="True">#FF005AAA</Color>
    <SolidColorBrush x:Key="AccentActiveBrush" Color="#FF005AAA" options:Freeze="True"/>

    <Color x:Key="AccentHighlightedColor" options:Freeze="True">#FF28A0F0</Color>
    <SolidColorBrush x:Key="AccentHighlightedBrush" Color="#FF28A0F0" options:Freeze="True"/>

    <Color x:Key="AccentForegroundColor" options:Freeze="True">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFFFF" options:Freeze="True"/>

</ResourceDictionary>
