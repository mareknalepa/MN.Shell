<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:MN.Shell.Controls">

    <Style TargetType="controls:XamlIcon">
        <Setter Property="PrimaryBrush" Value="{DynamicResource AccentBaseBrush}"/>
        <Setter Property="SecondaryBrush" Value="{DynamicResource AccentHighlightedBrush}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

</ResourceDictionary>
